{
  "name": "openseadragon-filters",
  "version": "2.0.1",
  "description": "A plugin that provides the capability to apply filters to images in OpenSeadragon.",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "workspaces": [
    "site"
  ],
  "engines": {
    "node": ">=20.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "node ./scripts/clean.mjs",
    "build": "npm run build:dual",
    "build:dual": "npm run clean && tsc -p tsconfig.esm.json && tsc -p tsconfig.cjs.json",
    "dev": "npm run dev --workspace=site",
    "build:demo": "npm run build && npm run build --workspace=site",
    "deploy:demo": "npm run build && npm run build:demo && git subtree push --prefix site/dist origin gh-pages",
    "preview": "npm run preview --workspace=site",
    "watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rssaini01/openseadragon-filters.git"
  },
  "keywords": [
    "openseadragon",
    "filters",
    "image",
    "osd"
  ],
  "author": "Ravi Shankar Saini",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rssaini01/openseadragon-filters/issues"
  },
  "homepage": "https://github.com/rssaini01/openseadragon-filters#readme",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitest/ui": "^4.0.16",
    "jsdom": "^25.0.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
